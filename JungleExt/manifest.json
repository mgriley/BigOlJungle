{
  "manifest_version": 2,
  "name": "JungleExt",
  "version": "1.0",
  "description": "The official companion extension for JungleReader (www.junglereader.com). This extension allows JungleReader to fetch pages from external websites like reddit, mastodon, etc.",
  "icons": {
    "48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
  },
  "permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.junglereader.com/*",
        "https://*.junglereader.pages.dev/*"
      ],
      "js": [
        "browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}

